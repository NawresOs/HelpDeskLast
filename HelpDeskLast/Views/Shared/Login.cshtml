@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="content">
        <div class="row">
            <div class="col-3"> </div>

            <div class="col-6">
                <center><h2>Login </h2></center>


                <div class="imgcontainer">
                    <img src="/Images/User.png" alt="Avatar" class="avatar">
                </div>

                <div class="container">
                    <label for="uname"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="uname" id="Login" required>

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" id="pass" required>

                    <button type="button" id="Btnsubmit">Login</button>
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>

                <div class="container" style="background-color:#f1f1f1">
                    <button type="button" class="cancelbtn">Cancel</button>
                    <span class="psw">Forgot <a href="#">password?</a></span>
                </div>
            </div>
       
             <div class="col-3"></div>
            </div>
        </div>
  

</body>
</html>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $("#Btnsubmit").click(function () {

        var Login = $("#Login").val();
        var pass = $("#pass").val();
        $.ajax({
            dataType: "json",
            type: "POST",
            url: "Shared/SignIn",
            data: { Login, pass },
            success: function (data) {
                console.log("data", data);
                if (data == "Client") {

                    location.href = "/Client/index";

                } else if (data == "technicien") {

                    location.href = "/technicien/index";

                }
                else if (data == "Utilisateur Invalide") {

                    Swal.fire({
                        showCloseButton: true,
                        title: "Attention!",
                        text: "Utilisateur Invalide",
                        icon: "warning",
                        confirmButtonColor: '#3085d6',
                        button: "OK",
                        dangerMode: true
                    })
                    $("#Login").val("");
                    $("#pass").val("");
                } else {

                    Swal.fire({
                        showCloseButton: true,
                        title: "Attention!",
                        text: "Utilisateur Invalide",
                        icon: "warning",
                        confirmButtonColor: '#3085d6',
                        button: "OK",
                        dangerMode: true
                    })
                    $("#Login").val("");
                    $("#pass").val("");
                }
            }
        });
    });


</script>
