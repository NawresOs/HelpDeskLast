@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}



    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ajouter Reclamation</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
         
            </div>
   
            
      
            <!-- /.card-tools -->
        </div>

        <!-- /.card-header -->
        <div class="card-body">
          
                <div class="row Ajouter">
                    <div class="col-3"><label>Description *</label></div>
            <div class="col-9"><input type="text" class="form-control" placeholder="Entrer Description" name="Description" id="Description" /></div>

                </div>

             
                <div class="row" style="margin-top: 15px;">
                    <div class="col-9"><span style="color: red;"><b> @ViewBag.ErreurExiste</b></span> </div>
                    <div class="col-3">

                        <input type="button" value="Enregistrer " id="SaveReclamation" class="btn btn-primary" style="margin-left: 147px;" />
                    </div>
                </div>
            
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-muted">
            NB :  Tous les champs avec * sont obligatoires
        </div>
    </div>
    <!-- /.card -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $("#SaveReclamation").click(function () {

        var Description = $("#Description").val();
       
        $.ajax({
            dataType: "json",
            type: "POST",
            url: "/Client/AjouterReclamations",
            data: { Description },
            success: function (data) {
               
                if (data == "Success") {

                   Swal.fire({
                        showCloseButton: true,
                        title: "Success!",
                        text: "Redclamation Enregistrée",
                        icon: "success",
                        confirmButtonColor: '#3085d6',
                        button: "OK",
                        dangerMode: true
                    })
                     $("#Description").val("");
                } else {

                    Swal.fire({
                        showCloseButton: true,
                        title: "Attention!",
                        text: "Utilisateur Invalide",
                        icon: "warning",
                        confirmButtonColor: '#3085d6',
                        button: "OK",
                        dangerMode: true
                    })
                   
                   
                }
            }
        });
    });
    
    </script>