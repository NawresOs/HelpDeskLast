
@{
    Layout = "~/Views/Shared/_LayoutTechnicien.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Mes Reclamations</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
        <!-- /.card-tools -->
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped" style="text-align: center;">
            <thead>
                <tr role="row">
                    <th>Code</th>
                    <th>Description</th>                  
                    <th>Action</th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var Reclamation in Model)
                {

                    <tr id="@Reclamation.Id">
                        <td>@Reclamation.Code</td>
                        <td>@Reclamation.Description</td>
                    
                        <td>
                          
                                <div class="tools">

                                <button class="Take alert-danger " onclick="location.href='@Url.Action("TakeReclamation","Technicien", new { id=Reclamation.Id})'"> Take   </button>

                                </div>
                            
                        </td>


                    </tr>


                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Code</th>
                    <th>Description</th>                 
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>





    </div>
    <!-- /.card-body -->
    <div class="card-footer text-muted">
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
